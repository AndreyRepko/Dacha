<UserControl x:Class="Dacha.PropertyMappings.PropertyPresenters.StringPropertyPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dacha.PropertyMappings.PropertyPresenters"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=local:StringPropertyPresenter, IsDesignTimeCreatable=True}">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding DisplayName}" Margin="5" MinWidth="30"/>
        <TextBox Text ="{Binding Value, Mode=TwoWay}" MinWidth="200"/>
    </StackPanel>
</UserControl>
